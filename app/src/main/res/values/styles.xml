<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="text_title_tv_show">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">@dimen/text_size_common</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Title.TextAppearance" parent="android:TextAppearance">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Gray.Normal" parent="android:TextAppearance">
        <item name="android:textColor">@color/textColorGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Text.Light.Normal" parent="android:TextAppearance">
        <item name="android:textColor">@color/textColorLight</item>
        <item name="android:textSize">14sp</item>
    </style>



</resources>
